<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:theme="@style/Theme.GradeTracker.Background"
        tools:context=".ui.term.TermFragment">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/term_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/fragment_term_item" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/term_add_button"
            style="@style/Theme.GradeTracker.FloatingButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:contentDescription="@string/add"
            app:borderWidth="0dp"
            app:srcCompat="@android:drawable/ic_input_add" />

    </RelativeLayout>
</layout>