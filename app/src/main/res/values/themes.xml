<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GradeTracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#EF6C6C</item>
        <item name="colorPrimaryVariant">#EF6C6C</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#2D2E30</item>
        <!-- Customize your theme here. -->
        <item name="android:background">#ecf6fa</item>
    </style>

    <style name="Theme.GradeTracker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GradeTracker.ToolBar" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">#006dff</item>
        <item name="android:textColorSecondary">#006dff</item>
        <item name="android:fontFamily">@font/baloo</item>
    </style>

    <style name="Theme.GradeTracker.PopupOverlay" parent="ThemeOverlay.AppCompat">
        <item name="android:textColorPrimary">#006dff</item>
        <item name="android:fontFamily">@font/baloo</item>
    </style>

    <style name="Theme.GradeTracker.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">#3C3F49</item>
        <item name="android:textColorPrimary">#3C3F49</item>
        <item name="android:background">#ecf6fa</item>
    </style>

    <style name="Theme.GradeTracker.FloatingButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">#ED25c0fc</item>
    </style>

    <style name="Theme.GradeTracker.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">#FFFFFF</item>
    </style>

    <style name="Theme.GradeTracker.Text.Style1" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">#a82aaa</item>
        <item name="android:textColorPrimary">#a82aaa</item>
    </style>

    <style name="Theme.GradeTracker.Text.Style2" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">#595858</item>
        <item name="android:textColorPrimary">#595858</item>
    </style>
</resources>