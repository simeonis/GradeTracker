<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GradeTracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#EF6C6C</item>
        <item name="colorPrimaryVariant">#EF6C6C</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#2D2E30</item>
        <!-- Customize your theme here. -->
        <item name="android:background">#D7F1C3</item>
    </style>

    <style name="Theme.GradeTracker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GradeTracker.ToolBar" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:background">#72AD55</item>
    </style>

    <style name="Theme.GradeTracker.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:background">#72AD55</item>
    </style>

    <style name="Theme.GradeTracker.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:colorPrimary">#EF6C6C</item>
        <item name="android:background">#3C3F49</item>
    </style>

    <style name="Theme.GradeTracker.FloatingButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">#EDEF6C6C</item>
    </style>

    <style name="Theme.GradeTracker.Text.Style1" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">#EF6C6C</item>
        <item name="android:textColorPrimary">#EF6C6C</item>
    </style>

    <style name="Theme.GradeTracker.Text.Style2" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">#303030</item>
        <item name="android:textColorPrimary">#303030</item>
    </style>

    <style name="Theme.GradeTracker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
</resources>