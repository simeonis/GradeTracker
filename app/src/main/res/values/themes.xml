<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GradeTracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#EF6C6C</item>
        <item name="colorPrimaryVariant">#EF6C6C</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#2D2E30</item>

    </style>

    <style name="Theme.GradeTracker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GradeTracker.ToolBar" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">#006dff</item>
        <item name="android:textColorSecondary">#006dff</item>
        <item name="android:fontFamily">@font/baloo</item>
        <item name="android:background">#ecf6fa</item>
    </style>

    <style name="Theme.GradeTracker.PopupOverlay" parent="ThemeOverlay.AppCompat">
        <item name="android:textColorPrimary">#006dff</item>
        <item name="android:fontFamily">@font/baloo</item>
        <item name="android:background">#ecf6fa</item>
    </style>

    <style name="Theme.GradeTracker.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">#3C3F49</item>
        <item name="android:textColorPrimary">#3C3F49</item>
        <item name="android:background">#ecf6fa</item>
    </style>

    <style name="Theme.GradeTracker.FloatingButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">#ED25c0fc</item>
    </style>

    <style name="Theme.GradeTracker.FloatingButtonCancel" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">#EF6C6C</item>
        <item name="borderWidth">0dp</item>
    </style>

    <style name="Theme.GradeTracker.FloatingButtonOk" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">#47b27c</item>
        <item name="borderWidth">0dp</item>
    </style>

    <style name="Theme.GradeTracker.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">#FFFFFF</item>
    </style>

    <style name="Theme.GradeTracker.InnerCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">#FFFFFF</item>
    </style>

    <style name="Theme.GradeTracker.input" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColorHint">#000000</item>
    </style>


    <style name="Theme.GradeTracker.Text.Style1" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">#a82aaa</item>
        <item name="android:textColorPrimary">#a82aaa</item>
    </style>

    <style name="Theme.GradeTracker.Text.Style2" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">#595858</item>
        <item name="android:textColorPrimary">#595858</item>
    </style>

    <style name="Theme.GradeTracker.Background">
        <item name="android:background">#ecf6fa</item>
    </style>

    <style name="Theme.GradeTracker.error_msg">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">#FF0000</item>
    </style>

    <style name="Theme.GradeTracker.dialogButtons" >
        <item name="android:background">@drawable/dialog_button_background</item>
    </style>

    <style name="Theme.GradeTracker.dialog_text_edit_top" parent="Widget.AppCompat.EditText" >
        <item name="android:background">@drawable/edit_bk</item>
    </style>

    <style name="Theme.GradeTracker.dialog_text_edit" parent="Widget.AppCompat.EditText" >
        <item name="android:background">#FFFFFF</item>
    </style>
    <style name="Theme.GradeTracker.Progress_Bar" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="indicatorColor">#47b27c</item>
        <item name="trackColor">#CDC9C9</item>
    </style>

    <style name="Theme.GradeTracker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">#2D2E30</item>
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>
</resources>